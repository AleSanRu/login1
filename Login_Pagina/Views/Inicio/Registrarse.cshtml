@model Login_Pagina.Models.Usuario;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registrarse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5 pt-5">

        <div class="row justify-content-center">
            <div class="col-12 col-xl col-md-6">

                <div class="card">
                    <div class="card-header">
                        Registrate
                    </div>
                    <div class="card-body">
                        <form asp-controller="Inicio" asp-action="Registrarse" method="post">
                            <input class="form-control mb-3" type="text" placeholder="NombreUsuario" asp-for="NombreUsuario" required>
                            <input class="form-control mb-3" type="text" placeholder="ApellidoUsuario" asp-for="ApellidoUsuario" required>
                            <input class="form-control mb-3" type="email" placeholder="Correo" asp-for="Correo" required>
                            <input class="form-control mb-3" type="text" placeholder="NumeroTel" asp-for="NumeroTel" required>
                            <input class="form-control mb-3" type="text" placeholder="Direccion" asp-for="Direccion" required>
                            <input class="form-control mb-3" type="text" placeholder="FechaNa" asp-for="FechaNa" required>
                            <input class="form-control mb-3" type="password" placeholder="Clave" asp-for="Clave" required>
                            <div class="d-grid gap-2 mb-3">
                                <button class="btn-primary" type="submit">Registrate</button>
                            </div>
                            @if (ViewData["Mensaje"] != null)
                            {
                                <div class="form-groud">
                                    <div class="alert alert-danger" role="alert">
                                        @ViewData["Mensaje"]
                                    </div>
                                </div>
                            }
                            ¿Ya tienes una cuentra?<a href="@Url.Action("IniciarSesion","Inicio")">Iniciar Sesion!!!</a>
                        </form>
                    </div>

                </div>

            </div>
        </div>

    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
